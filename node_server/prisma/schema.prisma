generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum DocumentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id            String         @id @default(cuid())
  username      String         @unique
  email         String         @unique
  password  String
  createdAt     DateTime       @default(now())
  role          Role           @default(USER)
  
  conversations Conversation[]
  tokens        RefreshToken[] 
}

model Conversation {
  id        String     @id @default(cuid())
  title     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  exchanges Exchange[]
}

model Exchange {
  id             String   @id @default(cuid())
  userQuery      String
  systemResponse Json
  createdAt      DateTime @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String
}

model RefreshToken {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  expiresAt  DateTime
  revoked    Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Document {
  id                  Int      @id @default(autoincrement())
  documentType        Int
  displayName         String
  documentEncryptedId String   @unique
  originalFileSize    Float
  fileExtension       String
  uploadDateTime      DateTime @default(now())
  isCompressed        Boolean  @default(false)
  isProcessed         Boolean  @default(false)
  status              DocumentStatus @default(PENDING)
  retriesCount        Int      @default(0)
  documentPath        String?
  currentFileSize     Float?
  compressedDateTime  DateTime?
  thumbPath           String?
  createdAt           DateTime @default("2025-10-02T20:00:00+05:30")
 
}

model FileContainer {
  id                  Int         @id @default(autoincrement())
  Layer1_Hash         String      @unique
  Layer2_Hash         String      @unique
  Layer3_Hash         String      @unique
  Layer4_Hash         String      @unique
  Layer5_Hash         String      @unique
  FileCount           Int         @default(0)
  isFullyPopulated    Boolean     @default(false)
  lastUpdated         DateTime    @updatedAt
}


